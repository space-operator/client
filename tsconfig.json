{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "outDir": "./dist/main",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "moduleResolution": "node10"
  },
  "include": [
    "src/**/*"
  ]
}